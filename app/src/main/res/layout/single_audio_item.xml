<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/single_item_button_image"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/volume1"
        android:layout_marginLeft="16dp" />

    <TextView
        android:id="@+id/single_item_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:text="Filename"
        android:textColor="#050000"
        android:textSize="16sp"
        app:layout_constraintBottom_toTopOf="@+id/single_item_date"
        app:layout_constraintStart_toEndOf="@+id/single_item_button_image"
        app:layout_constraintTop_toTopOf="@+id/single_item_button_image" />

    <TextView
        android:id="@+id/single_item_date"
        android:fontFamily=""
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="5dp"
        android:layout_marginLeft="16dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="5dp"
        android:text="TextView"
        android:textColor="#807C7C"
        android:textSize="10sp"
        app:layout_constraintBottom_toBottomOf="@+id/single_item_button_image"
        app:layout_constraintStart_toEndOf="@+id/single_item_button_image"
        app:layout_constraintTop_toBottomOf="@+id/single_item_title" />
</androidx.constraintlayout.widget.ConstraintLayout>